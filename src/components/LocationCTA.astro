---
interface Props {
  city: string;
}

const { city } = Astro.props;
---

<section class="relative isolate overflow-hidden">
  <div class="absolute inset-0">
    <video
      autoplay
      muted
      loop
      playsinline
      class="absolute inset-0 w-full h-full object-cover"
    >
      <source src="/hero-bkg.mp4" type="video/mp4" />
    </video>
    <div class="absolute inset-0 bg-black/50"></div>
  </div>

  <div class="relative z-10 px-6 py-24 sm:py-32 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-4xl font-bold tracking-tight text-white sm:text-5xl drop-shadow-lg">
        Ready to Grow Your {city} Business?
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-lg leading-8 text-white/95 drop-shadow-md">
        Let's discuss how our digital marketing strategies can help you reach more customers, increase revenue, and achieve your business goals.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="#contact"
          class="rounded-md bg-white px-6 py-3 text-base font-semibold text-gray-900 shadow-lg hover:bg-gray-100 transition-colors focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
        >
          Get Your Free Consultation
        </a>
        <a
          href="tel:+12815551234"
          class="text-base font-semibold text-white hover:text-white/80 transition-colors"
        >
          Call Us Today <span aria-hidden="true">â†’</span>
        </a>
      </div>
    </div>
  </div>
</section>
