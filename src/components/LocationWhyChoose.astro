---
interface Props {
  city: string;
}

const { city } = Astro.props;

const features = [
  {
    title: "Local Expertise",
    description: `We know ${city}. Our team understands the local market dynamics, consumer behavior, and competitive landscape to give you an edge.`
  },
  {
    title: "Data-Driven Strategies",
    description: "Every decision we make is backed by data and analytics. We track, measure, and optimize continuously to ensure maximum ROI."
  },
  {
    title: "Transparent Reporting",
    description: "No smoke and mirrors. You'll receive clear, comprehensive reports that show exactly how your campaigns are performing."
  },
  {
    title: "Dedicated Support",
    description: "Your success is our priority. You'll have a dedicated account manager who knows your business and is always available to help."
  },
  {
    title: "Proven Results",
    description: "We've helped hundreds of businesses grow their online presence and revenue. Our track record speaks for itself."
  },
  {
    title: "Cutting-Edge Technology",
    description: "We leverage the latest tools, platforms, and technologies to keep you ahead of the competition."
  }
];
---

<section class="py-24 sm:py-32 bg-white">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl text-center">
      <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
        Why Choose Unwritten Agency?
      </h2>
      <p class="mt-6 text-lg leading-8 text-gray-600">
        We're more than just a digital marketing agency. We're your growth partner.
      </p>
    </div>

    <div class="mx-auto mt-16 max-w-2xl sm:mt-20 lg:mt-24 lg:max-w-none">
      <dl class="grid max-w-xl grid-cols-1 gap-x-8 gap-y-12 lg:max-w-none lg:grid-cols-3">
        {features.map((feature) => (
          <div class="flex flex-col">
            <dt class="text-xl font-semibold leading-7 text-gray-900 mb-3">
              {feature.title}
            </dt>
            <dd class="flex flex-auto flex-col text-base leading-7 text-gray-600">
              <p class="flex-auto">{feature.description}</p>
            </dd>
          </div>
        ))}
      </dl>
    </div>
  </div>
</section>
